<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>io.osnz.parent</groupId>
    <artifactId>osnz-parent</artifactId>
    <version>2</version>
  </parent>

  <groupId>nz.net.osnz.composite</groupId>
  <artifactId>composite-spring-parent</artifactId>
  <version>5.23</version>
  <packaging>pom</packaging>

  <name>composite-spring-parent</name>
  <description>Composite Spring Parent</description>
  <url>https://github.com/OpenSourceNZ/osnz-java-composite</url>

  <properties>
    <java.version>1.8</java.version>
    <spring-core.version>5.2.8.RELEASE</spring-core.version>
    <spring-boot.version>2.3.3.RELEASE</spring-boot.version>
    <spring-data-jpa.version>2.3.3.RELEASE</spring-data-jpa.version>

    <!-- jetty -->
    <apache-el.version>10.0.0-M5</apache-el.version>
    <composite-jetty.version>[3,4)</composite-jetty.version>

    <!-- tomcat -->
    <tomcat.version>10.0.0-M7</tomcat.version>
    <jstl.version>1.2</jstl.version>

    <!-- undertow -->
    <undertow.version>2.1.1.Final</undertow.version>

    <!-- spring test -->
    <composite-unit-test.version>[6,7)</composite-unit-test.version>

    <!-- thymelead -->
    <thymeleaf.version>3.0.11.RELEASE</thymeleaf.version>
    <thymeleaf-layout-dialect.version>2.4.1</thymeleaf-layout-dialect.version>
    <thymeleaf-extras-springsecurity5.version>3.0.4.RELEASE</thymeleaf-extras-springsecurity5.version>
    <nekohtml.version>1.9.22</nekohtml.version>


  </properties>

  <scm>
    <url>https://github.com/OpenSourceNZ/osnz-java-composite</url>
    <connection>scm:git:git@github.com/OpenSourceNZ/osnz-java-composite.git</connection>
    <developerConnection>scm:git:git@github.com:OpenSourceNZ/osnz-java-composite.git</developerConnection>
    <tag>composite-spring-reactor-5.23</tag>
  </scm>

  <build>
    <plugins>
      <plugin>
        <groupId>io.repaint.maven</groupId>
        <artifactId>tiles-maven-plugin</artifactId>
        <version>2.16</version>
        <extensions>true</extensions>
        <configuration>
          <tiles>
            <tile>io.osnz.tiles:release-tile:[1,)</tile>
          </tiles>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
